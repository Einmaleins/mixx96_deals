<div class="well">
<h1 class="page-header">Merchants</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Website</th>
      <th>Directions</th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td><%= "#{merchant.address} \n #{merchant.city}, #{merchant.state} #{merchant.zip}" %></td>
        <td><%= merchant.phone_number %></td>
        <td><%= merchant.email %></td>
        <td><%= link_to "http://#{merchant.homepage}", "http://#{merchant.homepage}" %></td>
        <td><%= merchant.map_link %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>