  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Mixx96Deals</title>
  <meta name="description" content="">

  <meta name="viewport" content="width=device-width">
  
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>  
</head>
<body>
	
	  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
	  <header>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <%= link_to 'Mixx96Deals', root_url, class: 'brand' %>  
            <ul class="nav">
              <li class="<%= 'active' if params[:controller] == 'merchants' %>"><%= link_to "Merchants", merchants_path %></li>
            </ul>
            <ul class="nav pull-right">
              <li class="divider-vertical"></li>
              <% if current_user %>
                <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                <li class="divider-vertical"></li>
                <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Login', new_user_session_path %></li>
                <li class="divider-vertical"></li>
                <li><%= link_to 'Register', new_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
  	</header>

  <div class="container">
		<% flash.each do |name, msg| %>
  		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    		<a class="close" data-dismiss="alert">Ã—</a>
    		<%= msg %>
  		</div>
		<% end %>

		<div class="row">
      <div class="span3">
			 <div id="asides" class="well sidebar-nav">
				<h2>Sidebar</h2>
        <ul class="nav nav-list">
          <li class="nav-header">Categories</li>
          <% Category.all.each do |category| %>
            <li><%= link_to category.name, "/?category=#{category.name.parameterize}" %></li>
          <% end %>
        </ul><!-- .nav .nav-list -->
			 </div><!--#asides .well .sidebar-nav -->
      </div><!-- span3 -->
			<div id="main" class="span9" role="main">
				<%= yield %>
			</div><!--#main -->
		</div><!--.row-->

    <footer class="span12">
      <hr/>
      <p>&copy; 2012. MIXX 96. All Rights Reserved</p>
    </footer>
	</div><!--.container-->
