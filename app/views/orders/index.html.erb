<h1 class="page-header">Order History</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Deal</th>
      <th>Address</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Order Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
  <tr>
    <td><%= order.deal.name %></td>
    <td><%= order.address %></td>
    <td><%= order.address2 %></td>
    <td><%= order.city %></td>
    <td><%= order.state %></td>
    <td><%= order.zip %></td>
    <td><%= order.created_at.to_s(:short) %>
    <td><%= link_to 'Show', success_deal_order_path(order.deal,order) %></td>
  </tr>
<% end %>
  </tbody>
</table>

